<!--コメント数、コメント内容-->
<h2>コメント件数：<%= pet.pet_comments.count %>件</h2>
<% pet.pet_comments.each do |pet_comment| %>
<div class="card">
  <div class="card-body">
    <div class="card-title">
      <%= link_to pet_comment.customer.nickname, customer_path(pet_comment.customer) %>
      <% if pet_comment.customer == current_customer %><!--コメント投稿者の場合、コメント削除表示-->
        <%= link_to pet_pet_comment_path(pet_comment.pet, pet_comment), method: :delete, data: { confirm: "コメントを削除しますか?" }, remote: true do %>
          <i class="fas fa-trash faa-horizontal animated-hover delete-btn" >削除</i>
        <% end %>
      <% end %>
    </div>
    <div class="card-text">
      <%= pet_comment.comment %>
    </div>
    <div class="text-right">
      <%= pet_comment.created_at.strftime('%Y/%m/%d')%>
    </div>
  </div>
</div>
<% end %>