<!--コメント数、コメント内容-->
<h4>コメント件数：<%= pet.pet_comments.count %>件</h4>
<% pet.pet_comments.each do |pet_comment| %>
<div class="card">
  <div class="card-body">
    <div class="card-title">
    <%= pet_comment.customer.name %>
      <% if pet_comment.customer == current_customer %><!--コメント投稿者の場合、コメント削除表示-->
            <%= link_to "削除", pet_pet_comment_path(pet_comment.pet, pet_comment), method: :delete, remote: true, class: "btn btn-danger btn-sm " %>
    </div>
        <% end %>
      <div class="card-text">
        <%= pet_comment.comment %>
      </div>
    <div class="text-right">
      <%= pet_comment.created_at.strftime('%Y/%m/%d')%>
    </div>
    </div>
  </div>
</div>
<% end %>