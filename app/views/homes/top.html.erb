<div class="container">
    <div class="slider-box">
      <ul class="slider">
        <li><img class="slickimage" src="assets/dog.jpg"></li>
        <li><img class="slickimage" src="assets/cat.jpg"></li>
        <li><img class="slickimage" src="assets/hamster.jpg"></li>
        <li><img class="slickimage" src="assets/bird.jpg"></li>
        <li><img class="slickimage" src="assets/gecko.jpg"></li>
      </ul>
    </div>
    <div class="tb">
      <% if customer_signed_in? %>
      <span class="icon-top">
        <%= link_to new_pet_path do %>
          <i class="fas fa-paw faa-float animated-hover fa-2x top-btn">ペット登録</i>
        <% end %>
      </span>
      <span class="icon-top">
        <%= link_to pets_path do %>
          <i class="fas fa-paw faa-float animated-hover fa-2x top-btn">ペット閲覧</i>
        <% end %>
      </span>
      <span class="icon-top">
        <%= link_to destroy_customer_session_path, method: :delete do %>
          <i class="fas fa-paw faa-float animated-hover fa-2x top-btn">ログアウト</i>
        <% end %>
      </span>
      <% else %>
      <span class="icon-top">
        <%= link_to pets_path do %>
          <i class="fas fa-paw fa-2x top-btn">ペット閲覧</i>
        <% end %>
      </span>
      <span class="icon-top">
        <%= link_to new_customer_registration_path do %>
          <i class="fas fa-paw faa-vertical animated-hoover fa-2x">新規登録</i>
        <% end %>
       </span>
      <span class="icon-top padding">
        <%= link_to new_customer_session_path do %>
          <i class="fas fa-paw faa-vertical animated-hoover fa-2x">ログイン</i>
        <% end %>
       </span>
      <% end %>
    </div>
</div>
