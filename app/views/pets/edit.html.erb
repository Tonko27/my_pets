<% @page_title = 'ペット編集' %>

<div class="container">
  <div class="row-12">
    <div class="card w-100">
    <h2>ペット編集</h2>
      <%= form_with model:@pet, url: pet_path, local:true do |f| %>
        <div class="form_floating pt-4 pb-3">
          <%= attachment_image_tag @pet, :image, :fill, 300, 300, fallback: "no_image.jpg"%><br>
          <h4>画像</h4>
            <%= f.attachment_field :image %>
          <h4>性格</h4>
            <%= f.text_area :character, class: "form-control" %>
          <h4>経緯</h4>
            <%= f.text_area :reason, class: "form-control"  %>
        </div>
        <div class="text-right">
        <%= f.submit '変更を保存', class: 'btn btn-dark' %>
        </div>
     <% end %>
    </div>
  </div>
</div>


