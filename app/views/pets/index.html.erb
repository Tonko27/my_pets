<%= search_form_for @q, url: pets_search_path do |f| %>
  <p>カテゴリー検索</p>
  <%= f.label '性別'%>
  <%= f.collection_select :gender_id_eq, Gender.where.not(id: 0), :id, :name, include_blank: '指定なし' %>
  <%= f.label 'カテゴリー'%>
  <%= f.collection_select :category_id_eq, Category.where.not(id: 0), :id, :name, include_blank: '指定なし' %>
  <%= f.label '年齢'%>
  <%= f.collection_select :age_id_eq, Age.where.not(id: 0), :id, :name, include_blank: '指定なし' %>
  <%= f.label '品種'%>
  <%= f.search_field :breed_cont%>
  <%= f.submit '検索' %>
<% end %>

<% @pet.each do |pet| %>
<div>
  <p>画像<%= attachment_image_tag pet, :image, format: 'jpeg', size: "100x100" %></p>
  <p>性別<%= pet.gender.name %></p>
  <p>カテゴリー<%= pet.category.name %></p>
  <p>品種<%= pet.breed %></p>
  <p>年齢<%= pet.age.name %></p>
  <p>性格<%= pet.character %></p>
  <p>経緯<%= pet.reason %></p>
  <p><%= link_to "#{pet.pet_comments.count} コメント", pet_path(pet.id) %></p>
</div>
<% end %>
<%= paginate @pet %><!--ページング-->