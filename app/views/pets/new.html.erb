<% @page_title = 'ペット投稿' %>

<div class="container">
  <div class="row">
     <div class="col-lg-6 col-12">
        <div class="card w-100">
          <h1 class="card-body">ペット投稿</h1>
          <%= form_with model: @pet, local:true do |f| %>
            <h4>写真</h4>
            <%= f.attachment_field :image, class: 'form-control' %>
            <h4>性別</h4>
            <%= f.collection_select :gender_id, Gender.all, :id, :name, {include_blank: "---"}, {class: "form-control"} %>
            <h4>ペットタイプ</h4>
            <%= f.collection_select :category_id, Category.all, :id, :name, {include_blank: "---"}, {class: "form-control"} %>
            <h4>品種</h4>
            <%= f.text_field :breed, class: 'form-control' %>
            <h4>年齢</h4>
            <%= f.collection_select :age_id, Age.all, :id, :name, {include_blank: "---"}, {class: "form-control"} %>
            <h4>性格</h4>
            <%= f.text_area :character, class: 'form-control' %>
            <h4>経緯</h4>
            <%= f.text_area :reason, class: 'form-control' %>
            <%= f.submit '投稿', class: 'form-control' %>
          <% end %>
        </div>
      </div>
      <% if @pet.errors.any? %>
      <div class="col-6">
        <div class="card-body w-100">
          <%= @pet.errors.count %>件のエラーが発生しました
            <% @pet.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
        </div>
      </div>
      <% end %>
  </div>
</div>