<h1 ペット投稿フォーム</h1>
<%= form_with model: @pet, local:true do |f| %>
  <h4>画像</h4>
  <%= f.attachment_field :image %>
  <h4>性別</h4>
  <%= f.collection_select :gender_id, Gender.all, :id, :name, {include_blank: "---"}, {class: ""} %>
  <h4>ペットタイプ</h4>
  <%= f.collection_select :category_id, Category.all, :id, :name, {include_blank: "---"}, {class: ""} %>
  <h4>品種</h4>
  <%= f.text_field :breed %>
  <h4>年齢</h4>
  <%= f.collection_select :age_id, Age.all, :id, :name, {include_blank: "---"}, {class: ""} %>
  <h4>性格</h4>
  <%= f.text_area :character %>
  <h4>経緯</h4>
  <%= f.text_area :reason %>
  <%= f.submit '投稿' %>
<% end %>