<% if results.length !=0 %><%# 検索結果数で条件分岐 %>
  <% results.each do |pet| %>
  <div class="col-4 w-100 p-2">
    <div class="card w-100">
      <%= attachment_image_tag pet, :image, format: 'jpeg', size: "250x250", class:"card-img-top" %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th >投稿者</th>
            <td><%= pet.customer.name %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td><%= pet.gender.name %></td>
          </tr>
          <tr>
            <th>カテゴリー</th>
            <td><%= pet.category.name %></td>
          </tr>
          <tr>
            <th>品種</th>
            <td><%= pet.breed %></td>
          </tr>
          <tr>
            <th>年齢</th>
            <td><%= pet.age.name %></td>
          </tr>
        </tbody>
      </table>
      <div class="card-body">
        <%= link_to  "詳しく見る", pet_path(pet.id), class:"btn btn-light btn-sm" %>
      </div>
    </div>
  </div>
  <% end %>
<% else %>
  <div class="card text-center">
    <h2>該当するペットはありません</h2>
  </div>
<% end %>


